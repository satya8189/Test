<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_topic_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="#fff"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="16dp"
        android:id="@+id/networl_re_layout"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            app:civ_border_width="@dimen/circle_width"
            app:civ_border_color="#000"
            android:id="@+id/chat_topic_list_profile_img"
            android:src="@drawable/user_icon"/>

        <TextView
            android:id="@+id/chat_topic_list_name"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/chat_topic_list_profile_img"
            android:text="Android "
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifications_number"
            android:text="22"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:background="@drawable/textview_circle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>