<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_topic_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/networl_re_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_topic_list_profile_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_icon"
            app:civ_border_color="#000"
            app:civ_border_width="@dimen/circle_width" />

        <TextView
            android:id="@+id/chat_topic_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Android "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notifications_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_circle"
            android:gravity="center"
            android:text="22"
            android:textColor="#fff"
            android:textSize="12sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>