<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/survey_item"
    tools:context="com.wre.yin.whiterabbiteventapp.SurveyActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/survey_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@color/survey_layout"
        android:paddingBottom="5dp"
        android:layout_above="@+id/survey_total_submit"
        android:scrollbars="vertical" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="3dp"
        android:textColor="#fff"
        android:id="@+id/survey_total_submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rectangle_shape_maybe"
        android:layout_alignParentStart="true" />
</RelativeLayout>
