<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <Button
        android:id="@+id/upload_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape_no"
        android:text="UPLOAD"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/upload_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_image"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/camara_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/cam_pic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gallery_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gallery_pick" />

    </LinearLayout>


    <GridView
        android:id="@+id/upload_image_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/upload_image_view"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:fastScrollEnabled="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"></GridView>

</RelativeLayout>
